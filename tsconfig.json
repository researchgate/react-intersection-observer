{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "module": "ES2015",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "jsx": "react",
    "rootDir": "src",
    "declarationDir": "./typings",
    "outDir": "./lib/es"
  },
  "include": ["src/**/*.ts"]
}
